<div id="show-desk-container" class="show-container">
  <div class="show-row">
    <div class="col-sm">


      <div class="show-card">
        <div class="show-image"></div>
         <% if @desk.photo.attached? %>
             <%= cl_image_tag(@desk.photo.key,
        width: 750, height: 400, crop: :fill) %>
         <% else %>
            <%= image_tag 'Placeholder_image', class: 'placeholder'%>
        <% end %>

        <div class="show-text">
          <div class="show-border">
           <h2 class="show-desk-title"><%= @desk.title %></h2>
            <h3>â‚¬<%= @desk.price %> per day</h3>
            <h4><em><i class="fas fa-map-marker-alt"></i> &#160;<%= @desk.location %></em></h4>
            <h4><i class="fas fa-chair"></i> <%= @desk.seats %></h4>
          </div>
          <p id="p">Available between <%= @desk.start_date %> and <%= @desk.end_date %></p>
        </div>
      </div>
        </div>
      <div class="show-buttons">

      <button class="btn btn-success"> <%= link_to "Back to all desks", root_path %></button>
      <button class="btn btn-success"><%= link_to "----- Edit desk -----", edit_desk_path %></button>
      <% user = User.find(@desk.user_id) %>
      <% if user != current_user %>
      <button class="btn btn-success"> <%= link_to 'Book this desk!', new_desk_booking_path(@desk) %></button>
      <% end %>

      </div>
    </div>
  </div>
