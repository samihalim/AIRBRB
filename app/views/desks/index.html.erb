<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/originals/17/5e/da/175eda03beec29af20dfc40a38e5ac68.jpg);">


  <div class="container-banner">
    <h1>air<strong>BRB</strong></h1>
    <div class="form-group row" id="search">
        <%= form_tag desks_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a desk near you..."
        %>
        <%= submit_tag "Search", class: "btn btn-success", id: "search1"%>
      <% end %>
    </div>

  </div>
</div>

<div class="row">

  <div class="col-8">
  <% @desks.each do |desk| %>
  <%= link_to desk_path(desk) do%>
  <div class="card-product">
    <% if desk.photo.attached? %>
    <%= cl_image_tag(desk.photo.key) %>
    <% else %>
    <%= image_tag "Placeholder_image"%>
    <% end %>
    <div class="card-product-infos">
      <h2 class="card-desk-title"><%=  desk.title %></h2>
      <h3 class="card-desk-text">â‚¬ -&#160;<strong><%= desk.price %> </strong>/day</></h3>
      <br>
      <h3 class="card-desk-text"><i class="fas fa-map-marker-alt"></i> -&#160;<%= desk.location%></h3>
      <br>
      <h3 class="card-desk-text"><i class="fas fa-chair"> -&#160; </i><%= pluralize desk.seats, "seat" %> </h3>
    </div>
  </div>

  <% end %>
  <% end %>
  </div>

<div class="col-4">
    <div id="map"
    style="width: 100%; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>



<script>

var map = new mapboxgl.Map({
  container: 'map',
  style: 'mapbox://styles/mapbox/light-v10',
  center: [-96, 37.8],
  zoom: 3
});


</script>
</div>
