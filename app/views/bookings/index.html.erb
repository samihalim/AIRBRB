<!-- my bookings for desks i rented out -->
<!-- name of my desk, start_date, end-date of availability  -->
<h2>My rented out desks</h2>

<div class="container mt-4">
  <div class="cards">
      <% @bookings_as_owner.each do |booking| %>
      <% if booking.desk.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag(booking.desk.photo.key,
        width: 400, height: 300, crop: :fill) %>')">
        <p id="card-text"><%= link_to booking.start_date, booking_path(booking) %></p>
        <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt" id="cards"></i>
        <% end %>
      </div>
      <% end %>
    <% end %>
  </div>
   </div>

